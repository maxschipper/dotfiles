    Mod+Shift+Print hotkey-overlay-title="Screenshot current window" { screenshot-window; }

    Mod+Insert hotkey-overlay-title="Color picker" { spawn "hyprpicker" "--autocopy" "--lowercase-hex"; }

    Mod+Shift+Escape allow-inhibiting=false { toggle-keyboard-shortcuts-inhibit; }
    Mod+Shift+E allow-inhibiting=false hotkey-overlay-title=null { quit; }
    Ctrl+Alt+Delete allow-inhibiting=false { quit; }
    Mod+Delete allow-inhibiting=false { quit; }
    
