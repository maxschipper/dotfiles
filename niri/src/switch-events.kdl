switch-events {
    lid-close { spawn "niri" "msg" "action" "power-off-monitors"; }
    lid-open { spawn "niri" "msg" "action" "power-on-monitors"; }
    tablet-mode-on { spawn "notify-send" "-e" "-t" "2000" "tablet mode on"; }
    tablet-mode-off { spawn "notify-send" "-e" "-t" "2000" "tablet mode off"; }
}
