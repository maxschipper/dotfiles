// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
// https://github.com/zed-industries/zed/blob/main/assets/settings/default.json
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "helix_mode": true,
  "base_keymap": "VSCode",

  "buffer_font_family": "JetBrainsMono Nerd Font Mono",
  "buffer_font_size": 16.0,
  // "buffer_line_height": "standard",
  "buffer_line_height": "comfortable",
  "unnecessary_code_fade": 0.4,

  "ui_font_family": "IBM Plex Sans",
  "ui_font_size": 16.0,

  "theme": "Github Dark Dimmed",
  "icon_theme": "Catppuccin Frapp√©",
  "languages": {
    "Python": {
      "language_servers": [
        // Disable basedpyright and enable Ty, and otherwise
        // use the default configuration.
        "ty",
        "!basedpyright",
        "...",
      ],
    },
  },
  // https://zed.dev/docs/configuring-languages#configuring-language-servers
  "lsp": {
    "vscode-css-language-server": {
      "settings": {
        "css": {
          "lint": {
            "unknownAtRules": "ignore",
          },
        },
      },
    },
  },
  "disable_ai": false,
  "features": {
    "edit_prediction_provider": "zed",
  },
  "show_edit_predictions": true,
  "edit_predictions": {
    "mode": "subtle",
  },
  "cursor_blink": false,
  "linked_edits": true,
  "autosave": "off",
  "remove_trailing_whitespace_on_save": true,
  "extend_comment_on_newline": false,
  "extend_list_on_newline": true,
  "indent_list_on_tab": true,
  "ensure_final_newline_on_save": true,
  "format_on_save": "on",
  "git": {
    "disable_git": false,
    "enable_status": true,
    "enable_diff": true,
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true,
      "delay_ms": 0,
      "padding": 7,
      "show_commit_summary": true,
      "min_column": 80,
    },
    "blame": {
      "show_avatar": true,
    },
    "branch_picker": {
      "show_author_name": true,
    },
    "hunk_style": "unstaged_hollow",
    "path_style": "file_name_first", // "file_name_first" or "file_path_first"
    // "path_style": "file_path_first", // "file_name_first" or "file_path_first"
  },

  "tab_bar": {
    "show": true,
    "show_tab_bar_buttons": false,
    "show_nav_history_buttons": false,
  },
  "tabs": {
    "git_status": true,
    "file_icons": false,
    "show_close_button": "hover",
    "close_position": "right",
    "show_diagnostics": "errors",
    "activate_on_close": "history",
  },
  "preview_tabs": {
    "enabled": false,
    // Whether to open tabs in preview mode when opened from the project panel with a single click.
    "enable_preview_from_project_panel": false,
    // Whether to open tabs in preview mode when selected from the file finder.
    "enable_preview_from_file_finder": false,
    // Whether to open tabs in preview mode when opened from a multibuffer.
    "enable_preview_from_multibuffer": true,
    // Whether to open tabs in preview mode when code navigation is used to open a multibuffer.
    "enable_preview_multibuffer_from_code_navigation": false,
    // Whether to open tabs in preview mode when code navigation is used to open a single file.
    "enable_preview_file_from_code_navigation": true,
    // Whether to keep tabs in preview mode when code navigation is used to navigate away from them.
    // If `enable_preview_file_from_code_navigation` or `enable_preview_multibuffer_from_code_navigation` is also true, the new tab may replace the existing one.
    "enable_keep_preview_on_code_navigation": true,
  },
  "file_finder": {
    "file_icons": true,
    //    "modal_max_width": "small",
    //    "modal_max_width": "medium",
    //    "modal_max_width": "large",
    "modal_max_width": "xlarge",
    //    "modal_max_width": "full"
    "skip_focus_for_active_in_search": true,
    "git_status": true,
    "include_ignored": "smart",
  },
  "status_bar": {
    "experimental.show": true,
    "cursor_position_button": true,
    "active_language_button": false,
    "line_endings_button": false,
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false,
    "code_actions": false,
    "agent_review": false,
    "selections_menu": true,
  },
  "title_bar": {
    "show_branch_icon": true,
    "show_branch_name": true,
    "show_project_items": true,
    "show_onboarding_banner": false,
    "show_user_picture": false,
    "show_user_menu": false,
    "show_sign_in": false,
    "show_menus": false,
  },
  "close_on_file_delete": true,
  "gutter": {
    "line_numbers": true,
    "runnables": true,
    "breakpoints": true,
    "folds": true,
    "min_line_number_digits": 2,
  },
  "search": {
    "button": false,
    "center_on_match": true,
    "regex": true,
    "include_ignored": true,
  },
  "search_wrap": false,
  "seed_search_query_from_cursor": "always",
  "use_smartcase_search": true,
  "diagnostics": {
    "button": true,
    "include_warnings": true,
    "lsp_pull_diagnostics": {
      "enabled": true,
      "debounce_ms": 50,
    },
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 30,
      "max_severity": null,
    },
  },
  "completions": {
    "lsp_insert_mode": "replace_subsequence",
  },
  "colorize_brackets": true,
  "word_diff_enabled": true,
  "lsp_document_colors": "inlay",
  "inlay_hints": {
    "enabled": true,
    "show_background": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_value_hints": true,
    "show_other_hints": true, // Corresponds to null/None LSP hint type value.
    "toggle_on_modifiers_press": {
      "alt": true,
      "control": false,
      "shift": false,
      "platform": false,
    },
  },
  "completion_menu_scrollbar": "auto",
  "show_whitespaces": "trailing",
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 2,
    // "coloring": "fixed",
    "coloring": "indent_aware",
    "background_coloring": "disabled",
  },
  "soft_wrap": "editor_width",
  "scrollbar": {
    "axes": {
      "horizontal": false,
    },
    "diagnostics": "warning",
    "show": "auto",
  },
  "vertical_scroll_margin": 5.0,
  "sticky_scroll": {
    "enabled": false,
  },
  "fast_scroll_sensitivity": 5.0,
  // "diagnostics_max_severity": "info",
  // "inline_code_actions": true,
  "inline_code_actions": false,
  "relative_line_numbers": "disabled",
  "drag_and_drop_selection": {
    "enabled": false,
  },

  "show_completions_on_input": true,
  "show_completion_documentation": true,
  "show_signature_help_after_edits": true,
  "auto_signature_help": true,

  "restore_on_startup": "last_session",
  "redact_private_values": true,
  "when_closing_with_no_tabs": "keep_window_open",
  "agent": {
    "always_allow_tool_actions": false,
    "inline_assistant_use_streaming_tools": true,
    // What completion mode to start new threads in, if available. Can be 'normal' or 'burn'.
    "preferred_completion_mode": "normal",
    "dock": "left",
    // "agents_panel_dock": "right",
    "default_view": "thread",
    // "default_view": "text_thread",
    "play_sound_when_agent_done": true,
    "notify_when_agent_waiting": "primary_screen",
    "enable_feedback": false,
    "default_model": {
      "provider": "google",
      "model": "gemini-3-pro-preview",
    },
    "model_parameters": [],
    "inline_assistant_model": {
      "provider": "google",
      "model": "gemini-3-flash-preview",
    },
    "default_profile": "minimal",
    "profiles": {
      "write": {
        "name": "Write",
        "enable_all_context_servers": true,
        "tools": {
          "copy_path": true,
          "create_directory": true,
          "delete_path": true,
          "diagnostics": true,
          "edit_file": true,
          "fetch": true,
          "list_directory": true,
          "project_notifications": false,
          "move_path": true,
          "now": true,
          "find_path": true,
          "read_file": true,
          "restore_file_from_disk": true,
          "save_file": true,
          "open": true,
          "grep": true,
          "terminal": true,
          "thinking": true,
          "web_search": true,
        },
      },
      "ask": {
        "name": "Ask",
        // We don't know which of the context server tools are safe for the "Ask" profile, so we don't enable them by default.
        // "enable_all_context_servers": true,
        "tools": {
          "open": false,
          "diagnostics": true,
          "fetch": true,
          "list_directory": true,
          "project_notifications": false,
          "now": true,
          "find_path": true,
          "read_file": true,
          "grep": true,
          "thinking": true,
          "web_search": true,
        },
      },
      "minimal": {
        "name": "Minimal",
        "enable_all_context_servers": false,
        "tools": {},
      },
    },
  },
  "terminal": {
    "alternate_scroll": "off",
    "cursor_shape": "bar",
  },
  "middle_click_paste": false,
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  "window_decorations": "server",

  // Panels
  "collaboration_panel": {
    "button": false,
  },
  "notification_panel": {
    "dock": "left",
  },
  "git_panel": {
    "collapse_untracked_diff": true,
    "sort_by_path": false,
    "status_style": "icon",
    "tree_view": false,
  },
  "outline_panel": {
    "button": true,
    "expand_outlines_with_depth": 0,
  },
  "project_panel": {
    "button": false,
    "starts_open": true,
    "hide_hidden": false,
    "hide_gitignore": false,
    "hide_root": true,
    "git_status": true,
    "file_icons": true,
    "folder_icons": false,
    "entry_spacing": "comfortable",
    "auto_fold_dirs": false,
    "sticky_scroll": false,
    "dock": "right",
    "default_width": 250,
    "sort_mode": "directories_first",
    "drag_and_drop": true,
    "auto_open": {
      "on_create": false,
      "on_paste": false,
      "on_drop": true,
    },
    "indent_guides": {
      "show": "never",
    },
  },
  "active_pane_modifiers": {
    "inactive_opacity": 1.0,
    "border_size": 0.5,
  },
  "bottom_dock_layout": "contained",
  "drop_target_size": 0.15,
  "use_system_path_prompts": false,
  // "use_system_prompts": true,
  "current_line_highlight": "all",
  "selection_highlight": true,
  "rounded_selection": true,

  // "use_on_type_format": true,

  "auto_update": false,
}
